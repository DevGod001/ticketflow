{
  "rewrites": [
    {
      "source": "/api/tickets(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/notifications(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/departments(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/join-requests(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/test-connection(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/debug-auth(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
